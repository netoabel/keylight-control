{
  "name": "keylight-control",
  "author": {
    "name": "netoabel",
    "email": "abel.neto@gmail.com",
    "url": "https://github.com/netoabel"
  },
  "private": true,
  "version": "1.2.0",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "tsc -p electron && cross-env NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "electron:build": "npm run build && tsc -p tsconfig.electron.json && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.1.2",
    "camera-watch": "^1.0.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3",
    "elgato-keylight": "^1.0.0",
    "fastq": "^1.17.1",
    "lucide-react": "^0.259.0",
    "next-themes": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.13.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/electron-window-state": "^2.0.34",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.0.2",
    "vite": "^4.5.5",
    "wait-on": "^7.0.1"
  },
  "main": "electron-dist/main.js",
  "build": {
    "appId": "com.keylight.control",
    "files": [
      "dist/**/*",
      "electron-dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
